{
  "compilerOptions": {
    "lib": ["DOM", "ES2017"],
    "noEmit": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "assets/*": ["src/assets/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
